{
  "name": "ts_build_my_adventure",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "start-server": "node dist/app.js",
    "start-dev-server": "tsc-watch --onSuccess \"node dist/app.js\"",
    "dev": "npm-run-all clean build start-dev-server",
    "migrate-make": "knex migrate:make init --knexfile ./src/config/knexfile.ts",
    "migrate": "knex migrate:latest --knexfile ./src/config/knexfile.ts",
    "migrate-down": "knex migrate:down --knexfile ./src/config/knexfile.ts",
    "seed-make": "knex seed:make dev --knexfile ./src/config/knexfile.ts  ",
    "seed": "knex seed:run --knexfile ./src/config/knexfile.ts",
    "yolo": "npm-run-all migrate-down migrate seed"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tsed/common": "^7.77.0",
    "@tsed/objection": "^7.77.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "knex": "^3.1.0",
    "objection": "^3.1.4",
    "parse": "^5.3.0",
    "pg": "^8.12.0",
    "winston": "^3.13.1"
  }
}
